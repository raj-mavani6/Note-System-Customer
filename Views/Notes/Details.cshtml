@model Note
@{
    ViewData["Title"] = "Note Details";
}

<section class="admin-detail-section">
    <div class="container-fluid px-4">
        <!-- Page Header -->
        <div class="admin-page-header animate-fade-in">
            <a asp-controller="Notes" asp-action="Index" class="back-link">
                <i class="bi bi-arrow-left"></i> Back to Notes
            </a>
            <h1 class="admin-page-title">
                <i class="bi bi-journal-text"></i> Note Details
            </h1>
        </div>

        <div class="row">
            <div class="col-lg-8">
                <!-- Note Content -->
                <div class="dashboard-card animate-fade-in">
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <div class="detail-banner">
                            <img src="@Model.ImageUrl" alt="@Model.Title" />
                        </div>
                    }
                    <div class="card-body">
                        <div class="detail-header-info">
                            <h2>@Model.Title</h2>
                            @if (Model.IsImportant)
                            {
                                <span class="badge bg-warning">
                                    <i class="bi bi-star-fill"></i> Important
                                </span>
                            }
                        </div>
                        <div class="detail-body">
                            <p>@Model.Content</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <!-- Note Info -->
                <div class="dashboard-card animate-fade-in">
                    <div class="card-header">
                        <h5><i class="bi bi-info-circle"></i> Information</h5>
                    </div>
                    <div class="card-body">
                        <ul class="info-list">
                            <li>
                                <span class="info-label">Note ID:</span>
                                <span class="info-value">#@Model.Id</span>
                            </li>
                            <li>
                                <span class="info-label">Created:</span>
                                <span class="info-value">@Model.CreatedAt.ToString("MMM dd, yyyy hh:mm tt")</span>
                            </li>
                            @if (Model.UpdatedAt.HasValue)
                            {
                                <li>
                                    <span class="info-label">Updated:</span>
                                    <span class="info-value">@Model.UpdatedAt.Value.ToString("MMM dd, yyyy hh:mm tt")</span>
                                </li>
                            }
                            <li>
                                <span class="info-label">Author:</span>
                                <span class="info-value">
                                    @if (Model.User != null)
                                    {
                                        <span>@Model.User.FullName</span>
                                    }
                                    else
                                    {
                                        <span>Unknown</span>
                                    }
                                </span>
                            </li>
                            <li>
                                <span class="info-label">Status:</span>
                                <span class="info-value">
                                    @if (Model.IsImportant)
                                    {
                                        <span class="badge bg-warning">Important</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Normal</span>
                                    }
                                </span>
                            </li>
                        </ul>

                        <div class="action-buttons mt-4">
                            <a asp-controller="Notes" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger w-100">
                                <i class="bi bi-trash"></i> Delete Note
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
