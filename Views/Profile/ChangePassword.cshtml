@model ChangePasswordViewModel
@{
    ViewData["Title"] = "Change Password";
}

<section class="admin-form-section">
    <div class="container-fluid px-4">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <!-- Page Header -->
                <div class="form-header animate-fade-in">
                    <a asp-action="Index" class="back-link">
                        <i class="bi bi-arrow-left"></i> Back to Profile
                    </a>
                    <h1 class="admin-page-title">
                        <i class="bi bi-key"></i> Change Password
                    </h1>
                    <p class="admin-page-subtitle">Update your account password</p>
                </div>

                <!-- Change Password Form -->
                <div class="form-card animate-fade-in">
                    <div class="password-icon">
                        <i class="bi bi-shield-lock"></i>
                    </div>

                    <form asp-action="ChangePassword" method="post">
                        @Html.AntiForgeryToken()

                        <div class="mb-4">
                            <label asp-for="CurrentPassword" class="form-label">
                                <i class="bi bi-lock"></i> Current Password <span class="required">*</span>
                            </label>
                            <input asp-for="CurrentPassword" type="password" class="form-control form-control-lg" placeholder="Enter current password">
                            <span asp-validation-for="CurrentPassword" class="text-danger small"></span>
                        </div>

                        <hr class="my-4">

                        <div class="mb-4">
                            <label asp-for="NewPassword" class="form-label">
                                <i class="bi bi-key"></i> New Password <span class="required">*</span>
                            </label>
                            <input asp-for="NewPassword" type="password" class="form-control form-control-lg" placeholder="Enter new password">
                            <span asp-validation-for="NewPassword" class="text-danger small"></span>
                            <small class="form-text text-muted">Minimum 6 characters</small>
                        </div>

                        <div class="mb-4">
                            <label asp-for="ConfirmPassword" class="form-label">
                                <i class="bi bi-key-fill"></i> Confirm New Password <span class="required">*</span>
                            </label>
                            <input asp-for="ConfirmPassword" type="password" class="form-control form-control-lg" placeholder="Confirm new password">
                            <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                        </div>

                        <div class="password-tips">
                            <h6><i class="bi bi-lightbulb"></i> Password Tips</h6>
                            <ul>
                                <li>Use at least 6 characters</li>
                                <li>Mix uppercase and lowercase letters</li>
                                <li>Include numbers and special characters</li>
                                <li>Don't use common words or personal info</li>
                            </ul>
                        </div>

                        <div class="form-buttons">
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
                                <i class="bi bi-x-lg"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="bi bi-check-lg"></i> Change Password
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        document.querySelector('form').addEventListener('submit', function(e) {
            const btn = this.querySelector('button[type="submit"]');
            btn.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>Updating...';
            btn.disabled = true;
        });
    </script>
}
