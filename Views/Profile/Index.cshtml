@model Admin
@{
    ViewData["Title"] = "My Profile";
}

<section class="admin-profile-section">
    <div class="container-fluid px-4">
        <div class="row">
            <!-- Left Column: Profile Card -->
            <div class="col-lg-4">
                <div class="profile-card animate-fade-in">
                    <div class="profile-header">
                        <div class="profile-image">
                            @if (!string.IsNullOrEmpty(Model.ProfileImageUrl))
                            {
                                <img src="@Model.ProfileImageUrl" alt="@Model.FullName" />
                            }
                            else
                            {
                                <div class="profile-placeholder">
                                    <i class="bi bi-person-circle"></i>
                                </div>
                            }
                        </div>
                        <h2 class="profile-name">@Model.FullName</h2>
                        <p class="profile-email">@Model.Email</p>
                        <span class="admin-role-badge">@Model.Role</span>
                    </div>

                    <div class="profile-stats">
                        <div class="stat-item">
                            <span class="stat-number">@((DateTime.Now - Model.CreatedAt).Days)</span>
                            <span class="stat-label">Days Active</span>
                        </div>
                        <div class="stat-item">
                            <span class="stat-number">@Model.Role</span>
                            <span class="stat-label">Role</span>
                        </div>
                    </div>

                    <div class="profile-actions">
                        <a asp-action="Edit" class="btn btn-primary w-100 mb-2">
                            <i class="bi bi-pencil"></i> Edit Profile
                        </a>
                        <a asp-action="ChangePassword" class="btn btn-outline-secondary w-100">
                            <i class="bi bi-key"></i> Change Password
                        </a>
                    </div>
                </div>
            </div>

            <!-- Right Column: Profile Info -->
            <div class="col-lg-8">
                <!-- Account Info -->
                <div class="dashboard-card animate-fade-in mb-4">
                    <div class="card-header">
                        <h5><i class="bi bi-person-badge"></i> Account Information</h5>
                    </div>
                    <div class="card-body">
                        <ul class="info-list">
                            <li>
                                <span class="info-label">Full Name</span>
                                <span class="info-value">@Model.FullName</span>
                            </li>
                            <li>
                                <span class="info-label">Email Address</span>
                                <span class="info-value">@Model.Email</span>
                            </li>
                            <li>
                                <span class="info-label">Role</span>
                                <span class="info-value">
                                    <span class="badge bg-primary">@Model.Role</span>
                                </span>
                            </li>
                            <li>
                                <span class="info-label">Member Since</span>
                                <span class="info-value">@Model.CreatedAt.ToString("MMMM dd, yyyy")</span>
                            </li>
                            <li>
                                <span class="info-label">Account Status</span>
                                <span class="info-value">
                                    @if (Model.IsActive)
                                    {
                                        <span class="badge bg-success"><i class="bi bi-check-circle"></i> Active</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger"><i class="bi bi-x-circle"></i> Inactive</span>
                                    }
                                </span>
                            </li>
                        </ul>
                    </div>
                </div>

                <!-- Quick Actions -->
                <div class="dashboard-card animate-fade-in">
                    <div class="card-header">
                        <h5><i class="bi bi-lightning-charge"></i> Quick Actions</h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-md-4">
                                <a asp-controller="Users" asp-action="Index" class="action-card">
                                    <i class="bi bi-people"></i>
                                    <span>Manage Users</span>
                                </a>
                            </div>
                            <div class="col-md-4">
                                <a asp-controller="Notes" asp-action="Index" class="action-card">
                                    <i class="bi bi-journal-text"></i>
                                    <span>Manage Notes</span>
                                </a>
                            </div>
                            <div class="col-md-4">
                                <a asp-controller="Home" asp-action="Index" class="action-card">
                                    <i class="bi bi-speedometer2"></i>
                                    <span>Dashboard</span>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
