@model User
@{
    ViewData["Title"] = "My Profile";
}

<section class="profile-section">
    <div class="container">
        <div class="row">
            <!-- Left Column: Profile Card -->
            <div class="col-lg-4">
                <div class="profile-card animate-fade-in">
                    <div class="profile-header">
                        <div class="profile-image">
                            @if (!string.IsNullOrEmpty(Model.ProfileImageUrl))
                            {
                                <img src="@Model.ProfileImageUrl" alt="@Model.FullName" />
                            }
                            else
                            {
                                <div class="profile-placeholder">
                                    <i class="bi bi-person"></i>
                                </div>
                            }
                        </div>
                        <h2 class="profile-name">@Model.FullName</h2>
                        <p class="profile-email">@Model.Email</p>
                    </div>

                    <div class="profile-stats">
                        <div class="stat-item">
                            <span class="stat-number">@(Model.Notes?.Count ?? 0)</span>
                            <span class="stat-label">Notes</span>
                        </div>
                        <div class="stat-item">
                            <span class="stat-number">@(Model.Notes?.Count(n => n.IsImportant) ?? 0)</span>
                            <span class="stat-label">Important</span>
                        </div>
                        <div class="stat-item">
                            <span class="stat-number">@((DateTime.Now - Model.CreatedAt).Days)</span>
                            <span class="stat-label">Days</span>
                        </div>
                    </div>

                    <div class="profile-actions">
                        <a href="/Profile/Edit" class="btn btn-primary w-100 mb-2">
                            <i class="bi bi-pencil"></i> Edit Profile
                        </a>
                        <a href="/Profile/ChangePassword" class="btn btn-outline-secondary w-100">
                            <i class="bi bi-key"></i> Change Password
                        </a>
                    </div>
                </div>
            </div>

            <!-- Right Column: Profile Info -->
            <div class="col-lg-8">
                <!-- Account Info -->
                <div class="info-card animate-fade-in mb-4">
                    <div class="info-header">
                        <h3><i class="bi bi-person-badge"></i> Account Information</h3>
                    </div>
                    <div class="info-body">
                        <div class="info-row">
                            <span class="info-label">Full Name</span>
                            <span class="info-value">@Model.FullName</span>
                        </div>
                        <div class="info-row">
                            <span class="info-label">Email Address</span>
                            <span class="info-value">@Model.Email</span>
                        </div>
                        <div class="info-row">
                            <span class="info-label">Phone Number</span>
                            <span class="info-value">@(Model.Phone ?? "Not provided")</span>
                        </div>
                        <div class="info-row">
                            <span class="info-label">Member Since</span>
                            <span class="info-value">@Model.CreatedAt.ToString("MMMM dd, yyyy")</span>
                        </div>
                        <div class="info-row">
                            <span class="info-label">Account Status</span>
                            <span class="info-value">
                                @if (Model.IsActive)
                                {
                                    <span class="badge bg-success"><i class="bi bi-check-circle"></i> Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger"><i class="bi bi-x-circle"></i> Inactive</span>
                                }
                            </span>
                        </div>
                    </div>
                </div>

                <!-- Recent Notes -->
                <div class="info-card animate-fade-in">
                    <div class="info-header">
                        <h3><i class="bi bi-journal-text"></i> Recent Notes</h3>
                        <a href="/Notes" class="btn btn-sm btn-outline-primary">View All</a>
                    </div>
                    <div class="info-body">
                        @if (Model.Notes != null && Model.Notes.Any())
                        {
                            <div class="notes-list">
                                @foreach (var note in Model.Notes.OrderByDescending(n => n.CreatedAt).Take(5))
                                {
                                    <a href="/Notes/Details/@note.Id" class="note-item">
                                        <div class="note-info">
                                            <h5>@note.Title</h5>
                                            <small>@note.CreatedAt.ToString("MMM dd, yyyy")</small>
                                        </div>
                                        @if (note.IsImportant)
                                        {
                                            <span class="important-badge"><i class="bi bi-star-fill"></i></span>
                                        }
                                    </a>
                                }
                            </div>
                        }
                        else
                        {
                            <div class="empty-notes">
                                <i class="bi bi-journal-x"></i>
                                <p>No notes yet. <a href="/Notes/Create">Create your first note!</a></p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
