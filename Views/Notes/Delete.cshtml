@model Note
@{
    ViewData["Title"] = "Delete Note";
}

<section class="notes-form-section">
    <div class="container-fluid px-4">
        <!-- Page Header -->
        <div class="form-header animate-fade-in">
            <a asp-action="Index" class="back-link">
                <i class="bi bi-arrow-left"></i> Back to Notes
            </a>
            <h1 class="form-title text-danger">
                <i class="bi bi-exclamation-triangle"></i> Delete Note
            </h1>
            <p class="form-subtitle">This action cannot be undone</p>
        </div>

        <form asp-action="Delete" method="post" class="notes-editor-form">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />

            <div class="row g-4">
                <!-- Left Column: Content Preview -->
                <div class="col-lg-7">
                    <div class="editor-card animate-fade-in delete-preview">
                        <div class="editor-header">
                            <h5><i class="bi bi-text-paragraph"></i> Content Preview</h5>
                        </div>
                        <div class="editor-body">
                            <div class="content-display">
                                @Model.Content
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Right Column: Details -->
                <div class="col-lg-5">
                    <div class="details-card animate-fade-in delete-details">
                        <!-- Delete Warning -->
                        <div class="delete-warning-box">
                            <i class="bi bi-exclamation-triangle-fill"></i>
                            <p>Are you sure you want to delete this note? This action cannot be undone.</p>
                        </div>

                        <!-- Title -->
                        <div class="detail-section">
                            <label class="detail-label">
                                <i class="bi bi-type"></i> Title
                            </label>
                            <div class="detail-value title-value">
                                @Model.Title
                            </div>
                        </div>

                        <!-- Image Preview -->
                        @if (!string.IsNullOrEmpty(Model.ImageUrl))
                        {
                            <div class="detail-section">
                                <label class="detail-label">
                                    <i class="bi bi-image"></i> Image
                                </label>
                                <div class="image-preview-small">
                                    <img src="@Model.ImageUrl" alt="@Model.Title" />
                                </div>
                            </div>
                        }

                        <!-- Important Status -->
                        <div class="detail-section">
                            <label class="detail-label">
                                <i class="bi bi-star"></i> Importance
                            </label>
                            @if (Model.IsImportant)
                            {
                                <div class="importance-badge important">
                                    <i class="bi bi-star-fill"></i> Important Note
                                </div>
                            }
                            else
                            {
                                <div class="importance-badge normal">
                                    <i class="bi bi-star"></i> Normal Priority
                                </div>
                            }
                        </div>

                        <!-- Note Info -->
                        <div class="detail-section">
                            <div class="note-meta-info">
                                <div class="meta-item">
                                    <i class="bi bi-calendar3"></i>
                                    <span>Created: @Model.CreatedAt.ToString("MMM dd, yyyy")</span>
                                </div>
                            </div>
                        </div>

                        <!-- Buttons -->
                        <div class="detail-section buttons-section">
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg w-100 mb-3">
                                <i class="bi bi-x-lg"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-danger btn-lg w-100">
                                <i class="bi bi-trash"></i> Yes, Delete Note
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</section>

@section Scripts {
    <script>
        document.querySelector('form').addEventListener('submit', function(e) {
            const btn = this.querySelector('button[type="submit"]');
            btn.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>Deleting...';
            btn.disabled = true;
        });
    </script>
}
