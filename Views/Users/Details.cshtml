@model User
@{
    ViewData["Title"] = Model.FullName;
}

<section class="admin-detail-section">
    <div class="container-fluid px-4">
        <!-- Page Header -->
        <div class="admin-page-header animate-fade-in">
            <a asp-controller="Users" asp-action="Index" class="back-link">
                <i class="bi bi-arrow-left"></i> Back to Users
            </a>
            <h1 class="admin-page-title">
                <i class="bi bi-person"></i> User Details
            </h1>
        </div>

        <div class="row">
            <div class="col-lg-4">
                <!-- User Profile Card -->
                <div class="dashboard-card animate-fade-in mb-4">
                    <div class="card-body text-center">
                        <div class="user-profile-image">
                            @if (!string.IsNullOrEmpty(Model.ProfileImageUrl))
                            {
                                <img src="@Model.ProfileImageUrl" alt="@Model.FullName" />
                            }
                            else
                            {
                                <div class="profile-placeholder">
                                    <i class="bi bi-person"></i>
                                </div>
                            }
                        </div>
                        <h3 class="user-name">@Model.FullName</h3>
                        <p class="user-email">@Model.Email</p>
                        @if (Model.IsActive)
                        {
                            <span class="badge bg-success badge-lg">
                                <i class="bi bi-check-circle"></i> Active
                            </span>
                        }
                        else
                        {
                            <span class="badge bg-danger badge-lg">
                                <i class="bi bi-x-circle"></i> Inactive
                            </span>
                        }

                        <div class="profile-actions mt-4">
                            <a asp-controller="Users" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary w-100 mb-2">
                                <i class="bi bi-pencil"></i> Edit User
                            </a>
                            <form asp-action="ToggleStatus" asp-route-id="@Model.Id" method="post" class="d-inline w-100">
                                @Html.AntiForgeryToken()
                                @if (Model.IsActive)
                                {
                                    <button type="submit" class="btn btn-warning w-100 mb-2">
                                        <i class="bi bi-pause-circle"></i> Deactivate
                                    </button>
                                }
                                else
                                {
                                    <button type="submit" class="btn btn-success w-100 mb-2">
                                        <i class="bi bi-play-circle"></i> Activate
                                    </button>
                                }
                            </form>
                            <a asp-controller="Users" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger w-100">
                                <i class="bi bi-trash"></i> Delete User
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-8">
                <!-- User Info -->
                <div class="dashboard-card animate-fade-in mb-4">
                    <div class="card-header">
                        <h5><i class="bi bi-info-circle"></i> User Information</h5>
                    </div>
                    <div class="card-body">
                        <ul class="info-list">
                            <li>
                                <span class="info-label">User ID:</span>
                                <span class="info-value">#@Model.Id</span>
                            </li>
                            <li>
                                <span class="info-label">Full Name:</span>
                                <span class="info-value">@Model.FullName</span>
                            </li>
                            <li>
                                <span class="info-label">Email:</span>
                                <span class="info-value">@Model.Email</span>
                            </li>
                            <li>
                                <span class="info-label">Phone:</span>
                                <span class="info-value">@(Model.Phone ?? "Not provided")</span>
                            </li>
                            <li>
                                <span class="info-label">Joined:</span>
                                <span class="info-value">@Model.CreatedAt.ToString("MMMM dd, yyyy hh:mm tt")</span>
                            </li>
                            <li>
                                <span class="info-label">Status:</span>
                                <span class="info-value">
                                    @if (Model.IsActive)
                                    {
                                        <span class="badge bg-success">Active</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Inactive</span>
                                    }
                                </span>
                            </li>
                            <li>
                                <span class="info-label">Total Notes:</span>
                                <span class="info-value">@(Model.Notes?.Count ?? 0)</span>
                            </li>
                        </ul>
                    </div>
                </div>

                <!-- User Notes -->
                <div class="dashboard-card animate-fade-in">
                    <div class="card-header">
                        <h5><i class="bi bi-journal-text"></i> User's Notes (@(Model.Notes?.Count ?? 0))</h5>
                    </div>
                    <div class="card-body">
                        @if (Model.Notes != null && Model.Notes.Any())
                        {
                            <div class="notes-list">
                                @foreach (var note in Model.Notes.Take(5))
                                {
                                    <div class="note-item">
                                        <div class="note-item-content">
                                            <h6>@note.Title</h6>
                                            <small class="text-muted">@note.CreatedAt.ToString("MMM dd, yyyy")</small>
                                        </div>
                                        <a asp-controller="Notes" asp-action="Details" asp-route-id="@note.Id" class="btn btn-sm btn-outline-primary">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                    </div>
                                }
                            </div>
                            @if (Model.Notes.Count > 5)
                            {
                                <p class="text-muted text-center mt-3">
                                    And @(Model.Notes.Count - 5) more notes...
                                </p>
                            }
                        }
                        else
                        {
                            <p class="text-muted text-center">This user has no notes yet.</p>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
