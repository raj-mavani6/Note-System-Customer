@model Note
@{
    ViewData["Title"] = "Delete Note";
}

<section class="admin-delete-section">
    <div class="container-fluid px-4">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <!-- Delete Confirmation Card -->
                <div class="delete-card animate-fade-in">
                    <div class="delete-icon">
                        <i class="bi bi-exclamation-triangle"></i>
                    </div>

                    <h2 class="delete-title">Delete Note?</h2>
                    <p class="delete-subtitle">Are you sure you want to delete this note? This action cannot be undone.</p>

                    <!-- Note Preview -->
                    <div class="note-preview">
                        @if (!string.IsNullOrEmpty(Model.ImageUrl))
                        {
                            <div class="preview-image">
                                <img src="@Model.ImageUrl" alt="@Model.Title" />
                            </div>
                        }
                        <div class="preview-content">
                            <h4>@Model.Title</h4>
                            <p>@(Model.Content.Length > 100 ? Model.Content.Substring(0, 100) + "..." : Model.Content)</p>
                            <div class="preview-meta">
                                @if (Model.User != null)
                                {
                                    <span><i class="bi bi-person"></i> @Model.User.FullName</span>
                                }
                                <span><i class="bi bi-calendar3"></i> @Model.CreatedAt.ToString("MMM dd, yyyy")</span>
                            </div>
                        </div>
                    </div>

                    <!-- Action Buttons -->
                    <form asp-action="Delete" method="post" class="delete-form">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" />

                        <div class="delete-buttons">
                            <a asp-controller="Notes" asp-action="Index" class="btn btn-outline-secondary btn-lg">
                                <i class="bi bi-x-lg"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-danger btn-lg">
                                <i class="bi bi-trash"></i> Yes, Delete Note
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        document.querySelector('.delete-form').addEventListener('submit', function(e) {
            const btn = this.querySelector('button[type="submit"]');
            btn.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>Deleting...';
            btn.disabled = true;
        });
    </script>
}
