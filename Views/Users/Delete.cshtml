@model User
@{
    ViewData["Title"] = "Delete User";
}

<section class="admin-delete-section">
    <div class="container-fluid px-4">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <!-- Delete Confirmation Card -->
                <div class="delete-card animate-fade-in">
                    <div class="delete-icon">
                        <i class="bi bi-exclamation-triangle"></i>
                    </div>

                    <h2 class="delete-title">Delete User?</h2>
                    <p class="delete-subtitle">Are you sure you want to delete this user? All their notes will also be deleted. This action cannot be undone.</p>

                    <!-- User Preview -->
                    <div class="user-preview">
                        <div class="preview-avatar">
                            @if (!string.IsNullOrEmpty(Model.ProfileImageUrl))
                            {
                                <img src="@Model.ProfileImageUrl" alt="@Model.FullName" />
                            }
                            else
                            {
                                <i class="bi bi-person"></i>
                            }
                        </div>
                        <div class="preview-info">
                            <h4>@Model.FullName</h4>
                            <p>@Model.Email</p>
                            <div class="preview-meta">
                                <span><i class="bi bi-journal-text"></i> @(Model.Notes?.Count ?? 0) Notes</span>
                                <span><i class="bi bi-calendar3"></i> Joined @Model.CreatedAt.ToString("MMM dd, yyyy")</span>
                            </div>
                        </div>
                    </div>

                    @if (Model.Notes != null && Model.Notes.Any())
                    {
                        <div class="warning-box">
                            <i class="bi bi-exclamation-circle"></i>
                            <p><strong>Warning:</strong> This user has @Model.Notes.Count note(s) that will be permanently deleted.</p>
                        </div>
                    }

                    <!-- Action Buttons -->
                    <form asp-action="Delete" method="post" class="delete-form">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" />

                        <div class="delete-buttons">
                            <a asp-controller="Users" asp-action="Index" class="btn btn-outline-secondary btn-lg">
                                <i class="bi bi-x-lg"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-danger btn-lg">
                                <i class="bi bi-trash"></i> Yes, Delete User
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        document.querySelector('.delete-form').addEventListener('submit', function(e) {
            const btn = this.querySelector('button[type="submit"]');
            btn.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>Deleting...';
            btn.disabled = true;
        });
    </script>
}
