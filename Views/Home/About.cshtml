@{
    ViewData["Title"] = "About Us";
}

<section class="about-hero-section">
    <div class="container">
        <div class="about-hero-content animate-fade-in">
            <span class="hero-badge">About Us</span>
            <h1 class="hero-title">Your Personal Notes, <span class="text-gradient">Organized Perfectly</span></h1>
            <p class="hero-description">NotesSystem is a modern, intuitive platform designed to help you capture, organize, and access your thoughts from anywhere.</p>
        </div>
    </div>
</section>

<section class="about-features-section">
    <div class="container">
        <div class="row g-4">
            <div class="col-lg-4">
                <div class="feature-card animate-fade-in">
                    <div class="feature-icon blue">
                        <i class="bi bi-lightning-charge-fill"></i>
                    </div>
                    <h3>Lightning Fast</h3>
                    <p>Create and access your notes instantly. No loading, no waiting – just pure productivity.</p>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="feature-card animate-fade-in">
                    <div class="feature-icon purple">
                        <i class="bi bi-shield-check"></i>
                    </div>
                    <h3>Secure & Private</h3>
                    <p>Your notes are protected with enterprise-grade security. Only you can access your data.</p>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="feature-card animate-fade-in">
                    <div class="feature-icon green">
                        <i class="bi bi-cloud-check-fill"></i>
                    </div>
                    <h3>Always Synced</h3>
                    <p>Access your notes from any device. Your content is always up-to-date and available.</p>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="about-story-section">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <div class="story-content animate-fade-in">
                    <span class="section-badge">Our Story</span>
                    <h2>Built for People Who <span class="text-gradient">Think Differently</span></h2>
                    <p>We believe that great ideas deserve a great home. NotesSystem was born from a simple observation: existing note-taking apps were either too complex or too limited.</p>
                    <p>Our mission is to create the perfect balance – a powerful yet simple tool that adapts to how you think, not the other way around.</p>
                    <div class="story-stats">
                        <div class="stat-item">
                            <span class="stat-number">10K+</span>
                            <span class="stat-label">Active Users</span>
                        </div>
                        <div class="stat-item">
                            <span class="stat-number">500K+</span>
                            <span class="stat-label">Notes Created</span>
                        </div>
                        <div class="stat-item">
                            <span class="stat-number">99.9%</span>
                            <span class="stat-label">Uptime</span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="story-visual animate-fade-in">
                    <div class="visual-card">
                        <div class="visual-icon">
                            <i class="bi bi-journal-richtext"></i>
                        </div>
                        <div class="visual-content">
                            <h4>Your Ideas, Amplified</h4>
                            <p>From quick thoughts to detailed plans, NotesSystem grows with your needs.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="about-values-section">
    <div class="container">
        <div class="section-header text-center animate-fade-in">
            <span class="section-badge">Our Values</span>
            <h2>What We Stand For</h2>
        </div>
        <div class="row g-4">
            <div class="col-md-6 col-lg-3">
                <div class="value-card animate-fade-in">
                    <div class="value-number">01</div>
                    <h4>Simplicity</h4>
                    <p>Less clutter, more clarity. Every feature serves a purpose.</p>
                </div>
            </div>
            <div class="col-md-6 col-lg-3">
                <div class="value-card animate-fade-in">
                    <div class="value-number">02</div>
                    <h4>Privacy</h4>
                    <p>Your thoughts are yours. We never sell or share your data.</p>
                </div>
            </div>
            <div class="col-md-6 col-lg-3">
                <div class="value-card animate-fade-in">
                    <div class="value-number">03</div>
                    <h4>Reliability</h4>
                    <p>Be there when you need us. Always accessible, always available.</p>
                </div>
            </div>
            <div class="col-md-6 col-lg-3">
                <div class="value-card animate-fade-in">
                    <div class="value-number">04</div>
                    <h4>Innovation</h4>
                    <p>Constantly evolving to meet your changing needs.</p>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="about-cta-section">
    <div class="container">
        <div class="cta-card animate-fade-in">
            <h2>Ready to Get Started?</h2>
            <p>Join thousands of users who trust NotesSystem for their daily notes.</p>
            <div class="cta-buttons">
                <a asp-controller="Account" asp-action="Register" class="btn-cta primary">
                    <i class="bi bi-rocket-takeoff"></i> Create Free Account
                </a>
                <a asp-controller="Home" asp-action="Contact" class="btn-cta secondary">
                    <i class="bi bi-chat-dots"></i> Contact Us
                </a>
            </div>
        </div>
    </div>
</section>
